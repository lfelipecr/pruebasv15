<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_methods_tree_view" model="ir.ui.view">
        <field name="name">payment.method.tree.view</field>
        <field name="model">payment.method</field>
        <field name="arch" type="xml">
            <tree string="Métodos de Pago">
                <field name="sequence" />
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_payment_methods" model="ir.actions.act_window">
        <field name="name">Métodos de pago</field>
        <field name="res_model">payment.method</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- TODO: check if putting this menuitem on electronic invoice module or depend on that module-->
    <menuitem id="menu_payment_methods" name="Métodos de pago" parent="menu_electronic_invoice" sequence="30" action="action_payment_methods"
              groups="l10n_cr_places.module_einvoice_costa_rica"/>
</odoo>
